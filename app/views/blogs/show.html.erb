<%= render 'home/navbar' %>
<p style="color: green"><%= notice %></p>
<%= render @blog %>
<div id="like-buttons">
  <% if @blog.liked_by?(current_user) %>
    <%= link_to 'Unlike', blog_unlike_path(@blog), remote: true, method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'Like', blog_like_path(@blog), remote: true, method: :post, class: 'btn btn-primary' %>
  <% end %>
</div>
<div id="like-count">
  <%= @blog.likes_count %> Likes
</div>
<div>
  <strong>Likes:</strong>
</div>
<%= link_to "Edit this blog", edit_blog_path(@blog) %> |
<%= link_to "Back to blogs", blogs_path %>
<%= button_to "Destroy this blog", @blog, method: :delete %>
