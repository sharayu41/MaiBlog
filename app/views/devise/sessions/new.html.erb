<%= stylesheet_link_tag 'login' %>


<h1 class="fw-bold text-center mt-3" >MaiBlog</h1>

<div id="container">

  <div class="left">
    <%= image_tag "cover.jpg" %>
  </div>

  <div class="right">
    <div class="text-center px-5 pt-3">
    </div>


    <div class="card" id ="cardu" style="width: 28rem;">
      <div class="card-body cardy">
        <h2 class="card-title fw-bold">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <p class="parag">Unlock Your Blogging Potential at Mai Blogs:<br> Log in to Share, Inspire, and Connect!</p>
          <div class="field">
            <%= f.label :email, for:"email", class:"form-label"%>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" ,id:"email", placeholder:"Enter your email" %>
          </div>

          <div class="field mt-3">
            <%= f.label :password, for:"password", class:"form-label"%>
              <%= f.password_field :password, autocomplete: "current-password", class:"form-control", id:"password",placeholder:"Enter your password" %>
              <p class="forgot"><%= link_to "Forgot your password?", new_password_path(resource_name) %></p>
          </div>

          <div class="d-grid gap-2 mt-3">
            <%= f.submit "Log in",class:"btn btn-primary" %>
          </div>

          <% end %>
      </div>
    </div>
    
    <div>
<hr>
     <div class="mb-5">Create an account? <%= link_to "Sign up", new_registration_path(resource_name) %></div>
    </div>

  </div>

</div>
